{
  "name": "adarshkr357/recipes-api",
  "description": "A production-ready RESTful API for managing recipes",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "symfony/dependency-injection": "^5.0",
    "symfony/http-foundation": "^4.4",
    "firebase/php-jwt": "^5.2",
    "guzzlehttp/guzzle": "^7.0",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}